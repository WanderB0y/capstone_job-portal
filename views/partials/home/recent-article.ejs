<section class="font-inter | flex flex-col | items-center">
  <h1 class="text-blue-500 | text-2xl | font-bold | p-2 | my-5 | md:text-4xl">
    Recently Posted Article
  </h1>

  <% articles.forEach(function(article) { %> <%-
  include('../../components/atom/recent-article-card', { article}) %> <% }); %>

  <div class="mb-8">
    <button
      class="border | border-blue-500 | h-9 | w-20 rounded-md | text-blue-500"
    >
      Prev
    </button>
    <select
      class="border | border-blue-500 | rounded-md | w-16 | h-9 | px-2 | mx-2"
      name="pages"
      id=""
    >
      <option value="1">1</option>
    </select>
    <button
      class="border | border-blue-500 | h-9 | w-20 rounded-md | text-blue-500"
    >
      Next
    </button>
  </div>
</section>
